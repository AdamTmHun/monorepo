{
	"name": "@inlang/project-config",
	"type": "module",
	"version": "1.0.0",
	"license": "Apache-2.0",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./.turbo ./node_modules"
	},
	"dependencies": {
		"@inlang/message": "workspace:*",
		"@inlang/message-lint-rule": "workspace:*",
		"@inlang/language-tag": "workspace:*",
		"@inlang/translatable": "workspace:*"
	},
	"devDependencies": {
		"@placeholder-company/js-code-style": "workspace:*",
		"tsd": "0.28.1",
		"typescript": "5.2.2",
		"vitest": "0.34.3"
	},
	"peerDependencies": {
		"@sinclair/typebox": "^0.31.0"
	}
}
