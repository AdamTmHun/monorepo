{
	"private": true,
	"name": "monorepo",
	"type": "module",
	"workspaces": [
		"lix/source-code/*",
		"inlang/source-code/*",
		"inlang/source-code/plugins/*",
		"inlang/source-code/paraglide/*",
		"inlang/source-code/paraglide/*/example",
		"inlang/source-code/paraglide/*/examples/*",
		"inlang/source-code/templates/*",
		"inlang/source-code/message-lint-rules/*",
		"inlang/source-code/versioned-interfaces/*"
	],
	"scripts": {
		"build": "npx nx run-many --target=build --parallel",
		"dev": "npx nx run-many --target=dev --parallel 1000 --output-style stream",
		"dev:lix": "npx nx run-many --target=dev --parallel=10 --nxBail --verbose --projects=@lix-js/*,@inlang/server,@inlang/editor,@inlang/website --output-style=stream",
		"production": "npx nx run-many --target=production --parallel 1000 --exclude @lix-js/server --exclude @inlang/badge",
		"---- TEST ----------------------------------------------------------": "",
		"test": "npx nx run-many --target=test --parallel",
		"---- LINT ----------------------------------------------------------": "",
		"lint": "npx nx run-many --target=lint --parallel",
		"format": "npx nx run-many --target=format --parallel",
		"---- OTHER ---------------------------------------------------------": "",
		"fetchPublicEnv": "npx nx run @inlang/env-variables:fetchPublicEnv",
		"fetchInternalEnv": "doppler secrets download --no-file --format env > .env",
		"changeset": "npx changeset",
		"clean": "npm run clean -ws --if-present && rm -rf ./.env ./node_modules",
		"----- CI ---- used to test the codebase on every commit": "",
		"ci": "npm i && npm run format && npm run lint && npm run build && npm run test"
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^6.6.0",
		"@typescript-eslint/parser": "^6.6.0",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-unicorn": "^45.0.2",
		"nx": "16.8.0",
		"nx-cloud": "16.4.0",
		"prettier": "2.8.3",
		"typescript": "5.2.2"
	}
}
