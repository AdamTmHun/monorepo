{
	"private": true,
	"type": "module",
	"workspaces": [
		"lix/*",
		"source-code/*",
		"source-code/core/*",
		"source-code/plugins/*",
		"source-code/versioned-interfaces/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run build --no-daemon && turbo run dev --parallel",
		"---- TEST ----------------------------------------------------------": "",
		"test": "turbo run test --log-order=grouped",
		"test:windows": "turbo run test --log-order=grouped --filter=./source-code/ide-extension --filter=./source-code/core --filter=./source-code/env-variables --filter=./source-code/telemetry --filter=\"./source-code/plugins/*\"",
		"---- LINT ----------------------------------------------------------": "",
		"lint": "turbo run lint",
		"format": "turbo run format",
		"---- OTHER ---------------------------------------------------------": "",
		"release": "changeset publish",
		"clean": "npm run clean -ws --if-present && rm -rf ./.env ./node_modules"
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=18.0.0 <19.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-solid": "^0.9.3",
		"eslint-plugin-unicorn": "^45.0.2",
		"prettier": "2.8.3",
		"turbo": "^1.10.13"
	}
}
