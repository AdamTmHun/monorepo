{
	"$schema": "https://inlang.com/schema/project-settings",
	"sourceLanguageTag": "en",
	"languageTags": ["en", "de", "pt-BR", "sk", "zh"],
	"modules": [
		"./inlang/source-code/plugins/json/dist/index.js",
		"https://cdn.jsdelivr.net/npm/@inlang/message-lint-rule-missing-translation/dist/index.js",
		"https://cdn.jsdelivr.net/npm/@inlang/message-lint-rule-empty-pattern/dist/index.js",
		"https://cdn.jsdelivr.net/npm/@inlang/message-lint-rule-without-source/dist/index.js",
		"./inlang/source-code/message-lint-rules/identicalPattern/dist/index.js"
	],

	"plugin.inlang.json": {
		"pathPattern": "./inlang/source-code/website/lang/{languageTag}.json",
		"variableReferencePattern": ["{", "}"]
	},

	"messageLintRule.inlang.identicalPattern": {
		"ignore": "error"
	}
}
