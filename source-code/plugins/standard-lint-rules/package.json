{
	"name": "@inlang/plugin-standard-lint-rules",
	"version": "3.0.0",
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"./dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "inlang package build --entry ./src/index.ts --outdir ./dist --watch",
		"build": "inlang package build --entry ./src/index.ts --outdir ./dist",
		"---- TEST ----------------------------------------------------------": "",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"test:watch": "npm-run-all --print-label --parallel tsc:watch vitest:watch",
		"tsc:watch": "tsc --noEmit --watch",
		"vitest:watch": "vitest watch --passWithNoTests --coverage",
		"---- OTHER ---------------------------------------------------------": "",
		"clean": "rm -rf ./dist ./.turbo ./coverage ./node_modules"
	},
	"dependencies": {
		"@inlang/lint": "*",
		"@inlang/plugin": "*"
	},
	"devDependencies": {
		"@inlang/cli": "*",
		"concurrently": "^8.0.1",
		"tsd": "^0.28.1",
		"typescript": "4.9.3",
		"vitest": "^0.29.8"
	}
}
