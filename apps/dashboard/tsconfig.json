{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2021", "DOM"],
		"target": "es2021",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitAny": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"]
		},
		"types": ["jest"]
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["src/**/*.test.ts"]
}
