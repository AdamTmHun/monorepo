{
	"name": "@inlang-git/client",
	"type": "module",
	"private": true,
	"exports": {
		"./raw": {
			"types": "./dist/raw/index.d.ts",
			"import": "./dist/raw/index.js"
		}
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"---- BUILD SETUP --------------------------------------------------": "",
		"isogit-clone": "shx rm -rf node_modules/isomorphic-git && git clone --depth=1 --sparse https://github.com/inlang/isomorphic-git node_modules/isomorphic-git 2>/dev/null || true",
		"isogit-pull": "cd node_modules/isomorphic-git && git pull",
		"isogit-http": "cd node_modules/isomorphic-git && git sparse-checkout add http",
		"isogit-tests": "cd node_modules/isomorphic-git && git sparse-checkout add __tests__/__fixtures__/",
		"isogit-update": "npm run isogit-clone; npm run isogit-pull && npm run isogit-http && npm run isogit-tests",
		"---- BUILD --------------------------------------------------------": "",
		"prebuild": "npm run isogit-update",
		"build": "tsc --build ./tsconfig.build.json",
		"predev": "npm run isogit-update",
		"dev": "tsc --watch",
		"---- TEST SETUP ----------------------------------------------------": "",
		"start-proxy": "cors-proxy start -p 9999 -d",
		"stop-proxy": "cors-proxy stop",
		"start-mock-server": "cross-env GIT_HTTP_MOCK_SERVER_PORT=8888 GIT_HTTP_MOCK_SERVER_ROOT=src/raw/tests/fixtures git-http-mock-server start",
		"stop-mock-server": "cross-env GIT_HTTP_MOCK_SERVER_PORT=8888 GIT_HTTP_MOCK_SERVER_ROOT=src/raw/tests/fixtures git-http-mock-server stop",
		"---- TEST ----------------------------------------------------------": "",
		"pretest": "npm run start-proxy && npm run start-mock-server",
		"test": "if vitest run --coverage --test-timeout 60000; then npm run _posttest; true; else npm run _posttest; false; fi",
		"_posttest": "npm run stop-proxy && npm run stop-mock-server",
		"---- LINT ----------------------------------------------------------": "",
		"lint": "cd ../.. && npm run lint:base ./source-code-git/client",
		"lint:fix": "cd ../.. && npm run lint:fix:base ./source-code-git/client",
		"format": "cd ../.. && npm run format:base ./source-code-git/client",
		"format:fix": "cd ../.. && npm run format:fix:base ./source-code-git/client",
		"---- OTHER ---------------------------------------------------------": "",
		"clean": "rm -rf ./dist ./.turbo ./coverage ./node_modules"
	},
	"dependencies": {
		"isomorphic-git": "^1.21.0"
	},
	"license": "Apache-2.0",
	"devDependencies": {
		"@inlang-git/fs": "^0.0.2",
		"@isomorphic-git/cors-proxy": "^2.7.1",
		"@isomorphic-git/pgp-plugin": "^0.0.7",
		"git-http-mock-server": "^1.1.0"
	}
}
